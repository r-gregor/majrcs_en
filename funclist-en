cv() {
# cdargs "$1" && cd "'cat "$HOME/.cdargs"'" ;
cdargs "$1" && cd "$(cat "$HOME/.cdargsresult")" ;
}


# funkcija, ki pred ukazom sprazni(clear) ekran
kl() {
clear && eval "$@"
}

# history list
hf() {
clear
if [ $# != 1 ]; then
	echo 'Number of argumets to hf() must be exactly 1 [one]!'
else
	history | grep "$1"
fi
}

lsl() {
	for file in *
	do
		if [ -h $file ]; then
				ls -got $file
		fi
	done
}

aln() {
	clear
	eval "$@"
	echo -e "\n"
}

