wh() {
# --> wh [YR]	start explorer /h/20$YR -- YR = 12 ... 25
    msg="Usage	wh [YR] -- YR = 12, ..., 25"

    if [ $# -ne 1 ]; then
        echo $msg

    elif [ $1 -lt 12 -o $1 -gt 25 ]; then
        echo $msg
    else
        cygstart explorer /E,"H:\20${1}"
    fi
}

